<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vincent.apk.MainActivity">

    <EditText
        android:id="@+id/et_apk_network_address"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="输入apk地址自动下载安装..."
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_click_down_apk"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_click_down_apk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:text="下载"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="1dp" />

    <Button
        android:id="@+id/btn_get_zhihu_message"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="获取知乎资讯"
        app:layout_constraintTop_toBottomOf="@+id/et_apk_network_address"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />



    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_zhihu_message_list"
        android:layout_width="315dp"
        android:layout_height="355dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_get_zhihu_message"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.5"></android.support.v7.widget.RecyclerView>




</android.support.constraint.ConstraintLayout>
